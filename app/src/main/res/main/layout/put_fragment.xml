<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_gray_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="发布内容"
        android:background="@color/white" />

    <Button
        android:id="@+id/oss_put"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_layout"
        android:text="发布" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/oss_et"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius_small"
            android:shadowRadius="100"
            android:textSize="17dp"
            android:hint="请输入标题"
            android:textColorHint="#BABABA"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            tools:ignore="SpUsage">
        </EditText>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:text="200"
            android:layout_marginTop="130dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/oss_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oss_list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/oss_list3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
    </LinearLayout>

    <Button
        android:id="@+id/oss_add"
        android:text="添加图片"
        android:layout_gravity="center"
        android:background="@drawable/button_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:elevation="20dp"/>
</LinearLayout>

