<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="分享好友" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/ic_my_share_bg"
        android:gravity="center"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:id="@+id/share_item"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="right"-->
<!--            android:paddingLeft="@dimen/dp_5"-->
<!--            android:paddingRight="@dimen/dp_5"-->
<!--            android:paddingTop="@dimen/dp_2"-->
<!--            android:paddingBottom="@dimen/dp_2"-->
<!--            android:text="邀请明细"-->
<!--            android:textColor="@color/white"-->
<!--            android:background="@drawable/left_radius"-->
<!--            android:textSize="@dimen/dp_15"-->
<!--            tools:ignore="SpUsage" />-->


        <ImageView
            android:id="@+id/share_QRCode"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_130"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/radius_small"
            android:elevation="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="打开浏览器扫码下载"
            android:textColor="@color/common_accent_color"
            android:textSize="@dimen/dp_11"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/share_save"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/phone_radius"
            android:gravity="center"
            android:text="保存二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"
            tools:ignore="SpUsage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/dotted_line_view"
            android:layerType="software" />

        <TextView
            android:id="@+id/share_invitation"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/phone_radius"
            android:gravity="center"
            android:text="立即邀请"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的邀请码:"
                android:textColor="@color/bg_gray4"
                android:textSize="@dimen/dp_12"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/share_invitation_code"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_25"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/radius_small"
                android:elevation="@dimen/dp_3"
                android:gravity="center"
                android:text="T6Hs5d7"
                android:textColor="@color/common_accent_color"
                android:textSize="@dimen/dp_15"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/share_copy"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/ic_copy"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/dotted_line_view"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="奖励规则"
                android:textColor="@color/common_accent_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="1、邀请好友，好友每次领取每日任务，你都能获得奖励"
                android:textColor="@color/common_accent_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="2、邀请好友，好友每次领取每日任务，你都能获得奖励"
                android:textColor="@color/common_accent_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="3、邀请好友，好友每次领取每日任务，你都能获得奖励"
                android:textColor="@color/common_accent_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="4、邀请好友，好友每次领取每日任务，你都能获得奖励"
                android:textColor="@color/common_accent_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>